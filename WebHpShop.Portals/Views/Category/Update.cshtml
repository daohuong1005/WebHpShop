@model WebHpShop.Reponsitory.Dto.CategoryDto
@{
    ViewBag.Title = "Update";
    Layout = "_LayoutAdmin";
}
<div class="modal-body">
    <form asp-action="Update" asp-controller="Category" class="form-group">
        <div asp-validation-summary="ModelOnly" class="alert"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group">
            <label class="col-form-label">Tên Loại</label>
            <input asp-for="CatergoryName" type="text" class="form-control" placeholder="Tên Loại" />
            <span asp-validation-for="CatergoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>