@model WebHpShop.Reponsitory.Dto.ManufacturerDto
@{
    ViewBag.Title = "Create";
    Layout = "_Layout1";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addManufacturerLabel">Thêm Hãng Sản Phẩm</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Create" asp-controller="Manufacturer" class="form-group">
                <div asp-validation-summary="ModelOnly" class="alert"></div>
                <div class="form-group">
                    <label class="col-form-label">Tên Hãng</label>
                    <input asp-for="manufacturerName" type="text" class="form-control" placeholder="Tên Hãng" />
                    <span asp-validation-for="manufacturerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
