@model WebHpShop.Reponsitory.Dto.ImageDto
@{
    ViewBag.Title = "Update";
    Layout = "_LayoutAdmin";
}
<div class="modal-body">
    <form asp-action="Update" asp-controller="Image" class="form-group" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert"></div>
        <input type="hidden" asp-for="ImageId" />
        <div class="form-group">
            <label class="col-form-label">Tên Sản Phẩm</label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        </div>
        <div class="form-group">
            <label class="col-form-label">Hiển Thị</label>
            <select asp-for="IsDisplay" class="accent-danger">
                <option value="true">Hiển Thị</option>
                <option value="false">Không Hiển Thị</option>
            </select>
            <span asp-validation-for="IsDisplay" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PathImage" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="PathImage" class="custom-file-input" width="600" type="file">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}