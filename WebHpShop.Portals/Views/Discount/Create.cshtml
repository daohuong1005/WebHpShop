@model WebHpShop.Reponsitory.Dto.DiscountDto

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout1";
}

<hr />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addDiscountLabel">Thêm Khuyễn Mãi</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Create" class="form-group">
                <div asp-validation-summary="ModelOnly" class="alert"></div>
                <div class="form-group">
                    <label class="col-form-label">Nội Dung Khuyễn Mãi</label>
                    <input asp-for="DiscountContent" type="text" class="form-control" placeholder="Nội Dung Khuyễn Mãi" />
                    <span asp-validation-for="DiscountContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Ngày Bắt Đầu</label>
                    <input asp-for="DiscountDateStart" type="date" class="form-control" placeholder="Ngày Bắt Đầu" />
                    <span asp-validation-for="DiscountDateStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Ngày Kết Thúc</label>
                    <input asp-for="DiscountDateEnd" type="date" class="form-control" placeholder="Ngày Kết Thúc" />
                    <span asp-validation-for="DiscountDateEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Khuyễn Mãi</label>
                    <input asp-for="DiscountMoney" type="number" class="form-control" placeholder="Phần Trăm Khuyễn Mãi" />
                    <span asp-validation-for="DiscountMoney" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Sản Phẩm</label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div> 