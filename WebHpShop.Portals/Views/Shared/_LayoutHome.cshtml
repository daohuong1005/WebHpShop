@*@using BookStore.Portal.Helpers
@using BookStore.Service.ViewModels*@
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - HpShop</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- reset CSS -->
    <link href="~/roothome/css/cssreset.css" rel="stylesheet" />
    <!-- link font-awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css"
          integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous" />
    <!-- Link css -->
    <link href="~/roothome/css/style.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="~/roothome/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <style>
        footer.bg-gradient-purple {
            background-color: aquamarine;
        }

        .col-lg-3.col-md-6 {
            margin-top: 10px;
        }

        a.btn.btn-outline-warning {
            display: block;
        }

        .Product-Promotion2.m-3 {
            background-color: aliceblue;
        }

        .Product-Promotion.m-3 {
            background-color: aliceblue;
        }

        .contentHangDt.accent-primary {
            text-align: center;
        }

        .contentHangMt.accent-primary {
            text-align: center;
        }

        .Menu-dropdown {
            text-align: center;
        }

        .linkHang {
            width: 300px;
            background-color: white;
            margin-top: 1px;
        }

        li#maytinh {
            background-color: gainsboro;
        }

        li.list-group-item {
            background-color: gainsboro;
        }

        .caption {
            width: 161px;
        }

        a.btn.btn-outline-warning {
            width: 171px;
        }

        .col-2.justify-content-center.a-block-book {
            width: 280px;
            margin-left: 10px;
            margin-top: 26px;
        }

        .formLogin {
            width: 20%;
            text-align: center;
            margin-left: 40%;
            margin-top: 50px;
            margin-bottom: 50px;
            background-color: beige;
        }

        .formDangKy {
            width: 30%;
            margin-left: 40%;
        }
        #notification i, #cart-order i, #LogIn-Logout i {
            font-size: 25px;
             color: blue; 
        }
        label#lable-for-notification {
            color: blue;
        }
        label#lable-for-cart {
            color: blue;
        }
        label#lable-for-Login {
            color: blue;
        }
        .linkHang {
            width: 300px;
        }
        .Product-Promotion4.m-3 {
            background-color: white;
        }
        .col-2.justify-content-center.a-block-book {
            margin-bottom: 30px;
        }
        .Product-Promotion3.m-3 {
            background-color: white;
        }
        p.ValueNot {
            text-align: center;
        }
        .IntGioHang {
            height: 400px;
        }
    </style>

</head>
<body>
    <div class="container-fluid">
        <!-- end div row-top-header -->
        <div class="row" id="navigation-top-header">
            <div class=" container" id="navigation-content">
                <div class="row">
                    <a class="col-2" id="logo-theme" asp-controller="Home" asp-action="Index">
                        <img class="w-100 d-block" src="~/Images/000LogoHpShopIcon.png" alt="Logo">
                    </a>
                    <!-- end div logo theme -->
                    <div class="col-7" id="search-bar">
                        <div >
                            <div class="input-group">
                                <input type="search" id="search-bar" placeholder="Tìm Kiếm" aria-describedby="button-addon5"
                                       class="form-control">
                                <div class="input-group-append">
                                    <button id="button-addon5" type="submit" class="btn btn-danger"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        <script>

                            $('#button-addon5').click(function () {
                                var sreach = document.getElementById("search-bar").value;
                                $.ajax({
                                    type: "Get",
                                    url: "/Product/Sreach",
                                    data: { Sreach: sreach },
                                    dataType: 'html',
                                    success: function (data) {
                                        $('.Product-Promotion3').html(data);
                                    }
                                });
                            });

                        </script>
                    </div>
                    <!-- end div search bar -->
                    <div class="col-1" id="notification">
                        <a class="notification-group" asp-action="Index" asp-controller="CheckOut">
                            <i class="fa fa-truck"></i>
                            <label id="lable-for-notification">Đơn Hàng</label>
                        </a>
                    </div>
                    <!-- end div notification -->

                    <div class="col-1" id="cart-order" href="#">
                        <a class="cart-order-group" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart"></i>
                            <label id="lable-for-cart">Giỏ hàng</label>
                        </a>
                    </div>

                    <!-- end div cart-order -->
                    <div class="col-1 dropdown" id="LogIn-Logout">
                        <a class="LogIn-Logout-group" asp-controller="User" asp-action="Login2">
                            <i class="fas fa-user"></i>
                            <label id="lable-for-Login">Đăng nhập</label>
                        </a>
                    </div>
                    <!-- end div Login-Logout -->
                </div>
                <!-- end div row -->
            </div>
            <!-- end div container navigation-content -->
        </div>
        <!-- end div navigation-top-header -->
    </div>
    @*end div container-fluid*@
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/000banner1.png" height="280" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/000banner2.jpg" height="280" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/000banner-samsung.jpg" height="280" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="bg-gradient-purple">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="f_widget about-widget pl_70 wow fadeInLeft" data-wow-delay="0.4s"
                         style="visibility: visible; animation-delay: 0.4s; animation-name: 'fadeInLeft';">
                        <h3 class="f-title f_600 t_color f_size_18">Dịch vụ</h3>
                        <ul class="list-unstyled f_list">
                            <li><a href="#">Điều khoản sử dụng</a></li>
                            <li><a href="#">Chính sách bảo mật</a></li>
                            <li><a href="#">Giới thiệu HpShop</a></li>
                            <li><a href="#">Hệ thống HpShop</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="f_widget about-widget pl_70 wow fadeInLeft" data-wow-delay="0.6s"
                         style="visibility: visible; animation-delay: 0.6s; animation-name: 'fadeInLeft';">
                        <h3 class="f-title f_600 t_color f_size_18">Hỗ trợ</h3>
                        <ul class="list-unstyled f_list">
                            <li><a href="#">Chính sách khách sỉ</a></li>
                            <li><a href="#">Phương thức vận chuyển</a></li>
                            <li><a href="#">Phương thức thanh toán và xuất HĐ</a></li>
                            <li><a href="#">Đổi trả hoàn tiền</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="f_widget social-widget pl_70 wow fadeInLeft" data-wow-delay="0.8s"
                         style="visibility: visible; animation-delay: 0.8s; animation-name: 'fadeInLeft';">
                        <h3 class="f-title f_600 t_color f_size_18">Liên hệ với chúng tôi</h3>
                        <div class="f_social_icon">
                            <a href="#" class="fab fa-facebook"></a>
                            <a href="#" class="fab fa-twitter"></a>
                            <a href="#" class="fab fa-linkedin"></a>
                            <a href="#" class="fab fa-pinterest"></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </footer>
    
    @*end di container footer*@
    <script src="~/roothome/lib/jquery/jquery-3.5.1.js"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @*<script src="~/roothome/lib/jquery/jquery-3.3.1.slim.min.js"></script>*@

    <script src="~/roothome/lib/jquery/popper.min.js"></script>

    <script src="~/roothome/js/jquery-3.5.1.min.js"></script>
    <script src="~/roothome/lib/bootstrap/bootstrap.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>


    @*<script src="~/roothome/js/site.js" asp-append-version="true"></script>*@

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>